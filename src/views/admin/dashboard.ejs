<div class="container-fluid py-4">

    <!-- =======================
       PAGE HEADER
       ======================= -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="mb-0">Admin Dashboard</h3>

        <a href="/admin/upload" class="btn btn-primary">
            <i class="bi bi-upload me-1"></i> Upload File
        </a>
    </div>

    <!-- =======================
       STATS CARDS
       ======================= -->
    <div class="row g-4 mb-4">

        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Total Files</h6>
                            <h2 class="fw-bold mb-0">
                                <%= stats.total_files || 0 %>
                            </h2>
                        </div>
                        <i class="bi bi-folder2-open fs-1 text-primary opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Total Downloads</h6>
                            <h2 class="fw-bold mb-0">
                                <%= stats.total_downloads || 0 %>
                            </h2>
                        </div>
                        <i class="bi bi-cloud-download fs-1 text-success opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Categories</h6>
                            <h2 class="fw-bold mb-0">
                                <%= stats.categories || 0 %>
                            </h2>
                        </div>
                        <i class="bi bi-tags fs-1 text-warning opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- =======================
       RECENT UPLOADS
       ======================= -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white">
            <h5 class="mb-0">Recent Uploads</h5>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Downloads</th>
                        <th>Uploaded On</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>
                    <% if (!files || files.length===0) { %>
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                No files uploaded yet
                            </td>
                        </tr>
                        <% } else { %>
                            <% files.forEach(file=> { %>
                                <tr>
                                    <td><strong>
                                            <%= file.title %>
                                        </strong></td>
                                    <td>
                                        <span class="badge bg-secondary">
                                            <%= file.category || 'Uncategorized' %>
                                        </span>
                                    </td>
                                    <td>
                                        <%= file.downloads %>
                                    </td>
                                    <td>
                                        <%= new Date(file.created_at).toLocaleDateString() %>                                        
                                    </td>
                                    <!-- <td>
                                        <a href="/admin/files/<%= file.id %>/edit"
                                            class="btn btn-sm btn-outline-primary">
                                            Manage
                                        </a>
                                    </td> -->
                                    <td>
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-primary dropdown-toggle"
                                                    data-bs-toggle="dropdown"
                                                    data-bs-display="static">
                                                Actions
                                            </button>

                                            <ul class="dropdown-menu dropdown-menu-end shadow">

                                                <li>
                                                    <a class="dropdown-item"
                                                    href="/admin/files/<%= file.id %>/edit">
                                                    ‚úèÔ∏è Edit
                                                    </a>
                                                </li>

                                                <li>
                                                    <form action="/admin/files/<%= file.id %>/toggle"
                                                        method="POST">
                                                        <button class="dropdown-item" type="submit">
                                                            <%= file.is_active == 1 ? '‚õî Disable' : '‚úÖ Enable' %>
                                                        </button>
                                                    </form>
                                                </li>

                                                <li><hr class="dropdown-divider"></li>

                                                <li>
                                                    <form action="/admin/files/<%= file.id %>/delete"
                                                        method="POST"
                                                        onsubmit="return confirm('Delete this file permanently?')">
                                                        <button class="dropdown-item text-danger" type="submit">
                                                            üóë Delete
                                                        </button>
                                                    </form>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } %>
                </tbody>
            </table>
        </div>
    </div>

</div>