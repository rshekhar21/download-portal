<div class="container-fluid py-4">

    <!-- =======================
       PAGE HEADER
       ======================= -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="mb-0">Admin Dashboard</h3>

        <a href="/admin/upload" class="btn btn-primary">
            <i class="bi bi-upload me-1"></i> Upload File
        </a>
    </div>

    <!-- =======================
       STATS CARDS
       ======================= -->
    <div class="row g-4 mb-4">

        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Total Files</h6>
                            <h2 class="fw-bold mb-0">
                                <%= stats.total_files || 0 %>
                            </h2>
                        </div>
                        <i class="bi bi-folder2-open fs-1 text-primary opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Total Downloads</h6>
                            <h2 class="fw-bold mb-0">
                                <%= stats.total_downloads || 0 %>
                            </h2>
                        </div>
                        <i class="bi bi-cloud-download fs-1 text-success opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Categories</h6>
                            <h2 class="fw-bold mb-0">
                                <%= stats.categories || 0 %>
                            </h2>
                        </div>
                        <i class="bi bi-tags fs-1 text-warning opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>

    </div>

    

       <% function formatSize(bytes) { if (!bytes) return '0 KB' ; if (bytes>= 1024 * 1024) {
    return (bytes / (1024 * 1024)).toFixed(2) + ' MB';
    }
    return (bytes / 1024).toFixed(1) + ' KB';
    }
    %>

    <div class="table-responsive">
      <table class="table table-hover align-middle mb-0">
        <thead class="table-light">
          <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Downloads</th>
            <th>Status</th>
            <th>Size</th>
            <th>Uploaded</th>
            <th class="text-end">Action</th>
          </tr>
        </thead>

        <tbody>
          <% files.forEach(file=> { %>
            <tr>
              <td><strong>
                  <%= file.title %>
                </strong></td>
              <td>
                <span class="badge bg-secondary">
                  <%= file.category || 'Uncategorized' %>
                </span>
              </td>
              <td>
                <%= file.downloads %>
              </td>
              <td>
                <% if (file.is_active) { %>
                  <span class="badge bg-success">Active</span>
                  <% } else { %>
                    <span class="badge bg-danger">Disabled</span>
                    <% } %>
              </td>
              <td>
                <%= formatSize(file.size) %>
              </td>
              <td>
                <%= new Date(file.created_at).toLocaleDateString() %>
              </td>
              <td class="d-flex gap-1 justify-content-end">

                <!-- <a href="/admin/files/<%= file.id %>/edit"
                 class="btn btn-sm btn-outline-primary">
                Edit
              </a> -->

                <form action="/admin/files/<%= file.id %>/toggle" method="POST">
                  <button class="btn btn-sm btn-outline-warning">
                    <%= file.is_active ? 'Disable' : 'Enable' %>
                  </button>
                </form>

                <form action="/admin/files/<%= file.id %>/delete" method="POST"
                  onsubmit="return confirm('Delete this file permanently?')">
                  <button class="btn btn-sm btn-outline-danger">
                    Delete
                  </button>
                </form>

              </td>
            </tr>
            <% }) %>
        </tbody>

      </table>
    </div>


</div>